<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMaterialBlue">

    <CheckBox
        android:id="@+id/inquiry_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="1dp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inquiry_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/inquiry_checkbox"
        app:layout_constraintTop_toTopOf="@id/inquiry_checkbox">

        <TextView
            android:id="@+id/bulan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/solway_regular"
            android:lineSpacingExtra="1dp"
            android:padding="8dp"
            android:text="@string/month"
            android:textColor="@color/colorBackground"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/inquiry_constraint"
            app:layout_constraintStart_toStartOf="@+id/inquiry_constraint"
            app:layout_constraintTop_toTopOf="@+id/inquiry_constraint" />

        <TextView
            android:id="@+id/secondData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bulan"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/solway_regular"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="@id/bulan"
            app:layout_constraintStart_toStartOf="@id/bulan"
            app:layout_constraintTop_toBottomOf="@id/bulan" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>